FROM python:3.11-slim

# Install dependencies required for psycopg2 and common tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    gcc \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copy requirements and install
COPY infra/etl/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# copy scripts
COPY scripts /app/scripts
RUN chmod -R a+rX /app/scripts

ENV PYTHONUNBUFFERED=1

# Default entrypoint: run the ingest_data.py script
ENTRYPOINT ["python", "scripts/ingest/ingest_data.py"]
